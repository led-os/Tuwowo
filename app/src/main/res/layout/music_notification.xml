<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:orientation="horizontal"
        android:paddingLeft="20sp"
        android:paddingRight="5sp"
        >
        <TextView
            android:id="@+id/music_notification_title"
            android:layout_width="0dp"
            android:layout_height="20sp"
            android:layout_weight="5"
            android:text="兔喔喔音乐"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/music_notification_close"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:src="@drawable/close"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10sp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/music_notification_previous"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/previous_notify"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/music_notification_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/pause_notify"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/music_notification_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/next_notify"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>